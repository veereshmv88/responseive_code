 // Mobile Menu Toggle
const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
const nav = document.querySelector('.nav');
const menuLines = document.querySelectorAll('.menu-line');

mobileMenuBtn.addEventListener('click', () => {
    // Toggle mobile menu visibility
    nav.classList.toggle('active');
    
    // Toggle menu button animation
    mobileMenuBtn.classList.toggle('open');
    
    // Animate menu lines (hamburger to X)
    menuLines[0].classList.toggle('rotate-down');
    menuLines[1].classList.toggle('hide');
    menuLines[2].classList.toggle('rotate-up');
});

// Function to check if mobile view
function isMobileView() {
    return window.innerWidth <= 992; // Match your mobile breakpoint
}

// Function to modify navbar for mobile
function setupMobileNavbar() {
    const navList = document.querySelector('.nav ul');
    
    if (isMobileView()) {
        // Remove Contact and Testimonials links
        const linksToRemove = ['#contact', '#testimonials'];
        document.querySelectorAll('.nav-link').forEach(link => {
            if (linksToRemove.includes(link.getAttribute('href'))) {
                link.parentElement.remove();
            }
        });
        
        // Add Login and Signup buttons to navbar
        const loginItem = document.createElement('li');
        loginItem.innerHTML = `
            <a href="login_.html" class="nav-link mobile-auth-btn mobile-login">
                <span>Log In</span>
            </a>
        `;
        
        const signupItem = document.createElement('li');
        signupItem.innerHTML = `
            <a href="signup.html" class="nav-link mobile-auth-btn mobile-signup">
                <span>Sign up</span>
            </a>
        `;
        
        navList.appendChild(loginItem);
        navList.appendChild(signupItem);
    }
}

// Close mobile menu when clicking on a nav link
document.addEventListener('click', (e) => {
    if (e.target.closest('.nav-link')) {
        nav.classList.remove('active');
        mobileMenuBtn.classList.remove('open');
        menuLines[0].classList.remove('rotate-down');
        menuLines[1].classList.remove('hide');
        menuLines[2].classList.remove('rotate-up');
    }
});

// Header scroll effect
const header = document.querySelector('.header');
window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
        header.classList.add('scrolled');
    } else {
        header.classList.remove('scrolled');
    }
});

// Smooth scrolling for anchor links
document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function(e) {
        e.preventDefault();
        
        const targetId = this.getAttribute('href');
        if (targetId === '#') return;
        
        const targetElement = document.querySelector(targetId);
        if (targetElement) {
            window.scrollTo({
                top: targetElement.offsetTop - 80,
                behavior: 'smooth'
            });
        }
    });
});

// Run on load and resize
setupMobileNavbar();
window.addEventListener('resize', setupMobileNavbar);
</script>

